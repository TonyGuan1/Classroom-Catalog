<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.shashaank.libraryapp.AboutUsPage"
    tools:showIn="@layout/activity_about_us_page">

    // display the creators of the app 
    <TextView
        android:id="@+id/creators"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="76dp"
        android:gravity="center"
        android:text="Creators: Shashaank, Tony, Andrew, Athavan"
        android:textColor="@color/colorPrimary"
        android:textSize="25sp"
        tools:layout_editor_absoluteX="138dp"
        tools:layout_editor_absoluteY="164dp" />
// information about the app
    <TextView
        android:id="@+id/teacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="56dp"
        android:text="Made For ICS4U"
        android:textColor="@color/colorPrimary"
        android:textSize="40sp" />
// information about the app
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/creators"
        android:layout_marginTop="79dp"
        android:gravity="center"
        android:text="An app made to store books and to be able to manage them within the application, Click on added books to manage them"
        android:textColor="@color/colorPrimary"
        android:textSize="25sp" />
</RelativeLayout>
